{
    "info": {
        "name": "Paymob Payment API",
        "_postman_id": "paymob-payment-api-collection",
        "description": "API collection for Paymob payment gateway integration with Laravel",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Orders",
            "item": [
                {
                    "name": "Create Order",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"amount\": 100.50,\n  \"currency\": \"EGP\",\n  \"customer_email\": \"customer@example.com\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/orders",
                            "host": ["{{base_url}}"],
                            "path": ["api", "orders"]
                        },
                        "description": "Create a new order for payment processing"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Payments",
            "item": [
                {
                    "name": "Initiate Payment",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"order_id\": 1,\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"phone_number\": \"01234567890\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/payments/initiate",
                            "host": ["{{base_url}}"],
                            "path": ["api", "payments", "initiate"]
                        },
                        "description": "Initiate payment for an order (returns payment iframe URL)"
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        }
    ]
}
